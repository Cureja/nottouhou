<!doctype html>
<html>
<head>
	<title>Profile - <%=@user.username%></title>
	<style>
		ul {
			list-style-type: none;
			margin: 0;
			padding: 0;
			overflow: hidden;
			background-color:  #FF69B4 ;
			position: fixed;
			top: 10px;
			float: left;
			border: 2px solid #fefefe; //white
		}

		p {
			font-family:sans-serif;
			color: white;
			font-weight: bold;
		}

		li {
			float:left;
		}

		li a {
	    	text-shadow: 2px 2px black;
			font-size: large;
			display: block;
			color: white;
			text-align: center;
			padding: 14px 16px;
			text-decoration: none;
		}

		li a:hover:not(.activePage) {
			background-color: #cc5490 ;
		}

		.activePage {
			background-color: #cc5490 ;
		}
		
		.paddingForNavigation{
			padding-left: 10%;
			padding-top: 20px;

		}

		.background {
			background: url("/weeb2.jpg") no-repeat center fixed;
			background-size: cover;
		}

		.currentUser {
 	    	text-shadow: 2px 2px black;
 			border: 2px solid white;
 			background-color:  #FF69B4 ;
 			width: 20%;
 			text-align: center;
 			float: right;
 			margin-right: 15%;
 		}
		 .wrapper{
			 border: 50px;
			 background-image: url("/hi.png");
			 background-color: #cf5bdd;
			 width: 1400px;
			 height: 1000px;
			 margin: auto;
			 position: absolute;
			 top: 0;
			 bottom: 0;
			 left: 0;
			 right: 0;
		 }
		 .container {
			 margin: auto;
			 position: absolute;
			 border: 1px solid white;
			 background-color:  #FF69B4 ;
			 width: 1000px;
			 height: 1000px;
			 top: 0;
			 bottom: 0;
			 left: 0;
			 right: 0;
		}


		table{
			border-collapse: collapse;
			width: 100%;
		}

		th{
			text-shadow: 2px 2px black;
			font-family:arial black;
			color: white;
			font-weight: bold;
			height: 40px;
		}
		td{
			font-family:arial black;
			color: white;
			font-weight: bold;
			width: 40px:
		}

		center {
			margin: auto;
			text-shadow: 2px 2px black;
			border: 2px solid white;
			padding: 15px;
			font-family: arial black;
			color: white;
			font-weight: bold;
		}

 </style>
</head>
<body class="background">
 <div class="currentUser">
		<div class="userProfile"></div>
		<p><%= @user.username %></p>
 </div>
 <div class="wrapper">
	 <div class="container">
	    <table>
        	<center>HIGHSCORES</center>
			<tr>
	        	<th>Rank</th>
	        	<th>User</th>
	        	<th>Score</th>
	      	</tr>
			<% for i in 1..@count do %>
				<% if i <= 20 && (i + ((get_page-1)*20)) <= @count %>
					<tr>
						<th><%= i + ((get_page-1)*20) %><%="."%></th>
						<th><%= put_user((i + ((get_page-1)*20))-1) %> </th>
						<th> <%= put_score((i + ((get_page-1)*2))-1)%> </th>
						</tr>
					<% end %>
				<% end %>
				<div style="position: absolute; bottom: 5px; right: 5px">
				  <% if @count >20 %>
					<% if get_page - 1 >= 1 %>
						<a href="/highscores?page=<%=(get_page)-1%>"><%="[<<]"%> </a>
						<% if get_page - 1 > 1 %>
						<%="..."%>
						<% end %>
					<% end %>
					<% if get_page == 1 %>
							<%=[1]%>
							<a href="/highscores?page=<%=2%>"><%=[2]%> </a>
					<% end %>
					<% if get_page == @intpages %>
							<a href="/highscores?page=<%=@intpages-1%>"><%=[@intpages-1]%> </a>
							<%=[@intpages]%>
					<% end %>
					<% if get_page != @intpages && get_page != 1%>
							<a href="/highscores?page=<%=(get_page-1)%>"><%=[get_page-1]%> </a>
							<%=[get_page]%>
							<a href="/highscores?page=<%=(get_page+1)%>"><%=[get_page+1]%> </a>
					<% end %>
					<% if get_page+ 1 <= @intpages %>
						<% if get_page+ 1 < @intpages %>
						<%="..."%>
						<% end %>
						<a href="/highscores?page=<%=(get_page)+1%>"><%="[>>]"%> </a>
					<% end %>
				  <% end %>
				  <% if @count <= 20%>
				    <%=[1]%>
				  <% end %>
				</div>
		</table>
	</div>
</div>
 <div class = "paddingForNavigation">
	 <div>
			<ul>
				<li><a href="/profile" >Campaign</a></li>
				<li><a href="/replays"> Replays</a></li>
				<li><a class = "activePage"> Hi-Scores</a></li>
				<li><a>Coop</a></li>
				<li><a href="/driveauth">Connect Drive</a></li>
				<li><a href="/logout">Log Out</a></li>
			</ul>
	 </div>
 </div>
 </div>
</body>
</html>

